    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>게시물 목록</title>
</head>
<body>
	<%
		List<PostVO> products = (List<PostVO>)request.getAttribute("posts"); 
	%>
	<table>
		<tr>
			<th>게시물 번호</th>			
			<th>게시물 제목</th>			
			<th>게시물 내용</th>			
		</tr>
		<%
			for(PostVO post: posts){
		%>
		<tr>
			<td><%=post.getId() %></td>
			<td>
				<a href='/mvc/read.product?id=<%=post.getId() %>'><%=post.getPostTitle() %></a>
			</td>
			<td><%=post.getPostContent() %></td>
		</tr>
		<%		
			}
		%> 
	</table>
		<div>
			<a href="/mvc/write.product">등록 완료</a>
		</div>
