<%@page import="com.app.vo.ProductVO"%>
<%@page import="java.util.Optional"%>
<%@page import="com.app.dao.ProductDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>상세 정보</title>
</head>
<body>
	<%
	p

			PostDAO productDAO = new PostDAO();
			Long id = Long.parseLong(request.getParameter("id"));
			Optional<ProductVO> product = productDAO.select(id);
			if(product.isPresent()){
		ProductVO foundProduct = product.get();
	%>	
		<h1>상품명: <%=foundProduct.getProductName() %></h1>
		<p>상품가: <%=foundProduct.getProductPrice() %></p>
		<p>상품재고: <%=foundProduct.getProductStock() %></p>
>	<%
		}
	%>
		<div>
			<a href="/myBatis/list.jsp">목록으로</a>
			<a href="/myBatis/update.jsp?id=<%=id %>">수정</a>
			<button type="button" id='delete-button'>삭제</button>
		</div>
</body>
<script type="text/javascript">
	const deleteButton = document.querySelector("#delete-button");
	deleteButton.addEventListener("click", (e) => {
		if(confirm('정말로 삭제하시겠습니까?')){
			window.location.href = "/myBatis/delete?id=<%=id %>"
		}	
	})

</script>






